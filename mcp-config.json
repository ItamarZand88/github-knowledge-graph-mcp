{
  "mcpServers": {
    "github-knowledge-graph": {
      "command": "node",
      "args": ["./packages/mcp-server/dist/index.js"],
      "cwd": "${PWD}",
      "env": {
        "LOG_LEVEL": "info",
        "NODE_ENV": "production",
        "MCP_DATA_DIR": "$HOME/.github-knowledge-graph/data"
      }
    }
  }
}