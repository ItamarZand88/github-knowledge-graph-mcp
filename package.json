{
  "name": "github-knowledge-graph-mcp",
  "version": "1.0.0",
  "description": "MCP Server for GitHub Knowledge Graph Analysis",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "github-knowledge-graph-mcp": "./dist/index.js",
    "claude-config": "./dist/install-claude-config.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node --esm src/index.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest --passWithNoTests",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "install-claude": "node dist/install-claude-config.js",
    "postinstall": "node -e \"try { require('fs').existsSync('./dist/install-claude-config.js') && console.log('\\nðŸŽ® Run \\'npm run install-claude\\' to configure Claude Desktop integration') } catch {}\""
  },
  "keywords": [
    "github",
    "knowledge-graph",
    "mcp",
    "code-analysis",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/fs-extra": "11.0.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fs-extra": "11.3.0",
    "helmet": "^6.0.1",
    "pino": "^8.11.0",
    "pino-pretty": "^9.4.0",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "rimraf": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
